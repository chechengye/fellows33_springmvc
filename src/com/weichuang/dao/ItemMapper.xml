<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weichuang.dao.ItemMapper">
    <!-- List<Item> getAllItem();-->
    <select id="getAllItem" resultType="Item">
        select * from items
    </select>

    <!--  Item getItemById(Integer id);-->
    <select id="getItemById" resultType="Item" parameterType="Integer">
        select * from items where id = #{id}
    </select>

    <!--void updateItem(Item item);-->
    <update id="updateItem" parameterType="Item">
        update items
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null and price != ''">
                price = #{price},
            </if>

            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>

            <if test="createtime != null and createtime != ''">
                createtime = #{createtime},
            </if>
            <if test="pic != null and pic != ''">
                pic = #{pic},
            </if>
            id=#{id}
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <!--    void deleteItems(String[] ids); where id in(1,2,3);-->
    <delete id="deleteItems" >
        delete from items
        <where>
            <foreach collection="array" open="id in (" separator="," close=")" item="id">
                #{id}
            </foreach>
        </where>
    </delete>

    <!--    void addItem(Item item);-->
    <insert id="addItem" parameterType="Item">
        insert into items VALUES (null , #{name} , #{price} ,  #{detail} ,"", #{createtime})
    </insert>
</mapper>
